{
    "name": "webexmachina/api-ai-wrapper-bundle",
    "version": "0.0.1-dev",
    "description": "Contao 5 ApiAiWrapperBundle Bundle.",
    "type": "contao-bundle",
    "license": "Apache-2.0",
    "website" : "https://www.webexmachina.fr/",
    "authors": [
        {
            "name": "Web ex Machina",
            "homepage": "https://www.webexmachina.fr",
            "role":"Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/framework-bundle": "6.4.x | 7.2.x",
        "symfony/http-client": "^7.3",
        "symfony/cache": "^7.3"
    },
    "autoload":{
        "psr-4": {
            "WebExMachina\\ApiAiWrapperBundle\\": "src/"
        }
    },
    "scripts": {
        "rector": "vendor/bin/rector p --ansi",
        "rector-dry": "vendor/bin/rector p --dryrun --ansi",
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi"
    },
    "extra":{
        "contao-manager-plugin": "WebExMachina\\ApiAiWrapperBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "php-http/discovery": true,
            "contao/manager-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "symplify/easy-coding-standard": "@stable",
        "rector/rector": "@stable",
        "phpstan/phpstan": "@stable"
    }
}
